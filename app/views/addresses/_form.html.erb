  </div>

  <div>
    <%= form.label :city, style: "display: block", class: "form-label" %>
    <%= form.text_field :city, readonly: readonly, class: "form-control" %>
  </div>

  <div>
    <%= form.label :state, style: "display: block", class: "form-label" %>
    <%= form.text_field :state, readonly: readonly, class: "form-control" %>
  </div>

  <div>
    <%= form.label :zip5, style: "display: block", class: "form-label" %>
